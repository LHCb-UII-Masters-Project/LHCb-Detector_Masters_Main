<lccdd>

  <plugins>
    <plugin name="LHCb_Ecal_cond_XML_reader" type="xml">
      <conditions_config prefix="Conditions/Ecal"/>
      <alignment detector="Ecal" path="Alignment.yml" name="EcalSystem"/>

      <conditions path="Calibration.yml">
        <condition name="Calibration"/>
        <condition name="Gain"/>
        <condition name="L0Calibration"/>
        <condition name="LEDReference"/>
        <condition name="PileUpOffset"/>
        <condition name="Quality"/>
        <condition name="Reco"/>
      </conditions>

      <conditions path="ReadoutConf.yml">
        <condition name="Hardware"/>
        <condition name="Monitoring"/>
        <condition name="Readout"/>
      </conditions>

      <conditions path="Reco.yml">
        <condition name="EcalClusterMasks"/>
        <condition name="EcalCovariance"/>
        <condition name="ElectronECorrection"/>
        <condition name="ElectronLCorrection"/>
        <condition name="ElectronSCorrection"/>
        <condition name="PhotonECorrection"/>
        <condition name="PhotonLCorrection"/>
        <condition name="PhotonSCorrection"/>
        <condition name="PhotonShowerProfile"/>
        <condition name="SplitPhotonECorrection"/>
        <condition name="SplitPhotonLCorrection"/>
        <condition name="SplitPhotonSCorrection"/>
      </conditions>

      <conditions path="ParticleID.yml">
        <condition name="BremPIDe"/>
        <condition name="EcalPIDe"/>
        <condition name="EcalPIDmu"/>
        <condition name="ElectronXCorrection"/>
      </conditions>

    </plugin>
  </plugins>

</lccdd>
