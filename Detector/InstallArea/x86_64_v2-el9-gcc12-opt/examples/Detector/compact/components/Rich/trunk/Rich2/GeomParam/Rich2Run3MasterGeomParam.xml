<constant name="Rich2MasterZ" value="10664.35*mm"/>
<constant name="Rich2MasterTilt" value="2.935*mrad"/>
<constant name="Rich2MasterRotY" value="0.12*mrad"/>
<constant name="Rich2MasterRotZ" value="0.03*mrad"/>

