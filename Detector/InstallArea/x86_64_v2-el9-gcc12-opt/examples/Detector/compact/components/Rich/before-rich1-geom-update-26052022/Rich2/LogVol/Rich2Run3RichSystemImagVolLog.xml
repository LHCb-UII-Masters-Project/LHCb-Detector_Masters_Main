<Rich2>

  <!-- LOGVOL lvRichSystem  -->

<!-- Now for the imaginary volume named RichSystem which was created just for having a -->
<!-- Detector element with that name -->

  <volume name="lvRichSystem" material="Rich:Air" vis="Rich:VisRichSystem">
     <shape type="Box" name="RichSystemBox"
	 dx="RichSystemImagXSize*RhHalfSize"
	 dy="RichSystemImagXSize*RhHalfSize"
	 dz="RichSystemImagXSize*RhHalfSize" />

  </volume>

  <!-- end lvRichSystem -->

</Rich2>
